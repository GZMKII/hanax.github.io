@import 'nib'
@import './iconfont.css'

*
  box-sizing border-box

body
  font-size 16px
  font-family Lato, sans-serif
  min-width 1000px
  color rgb(60,60,60)
  @media screen and (max-width: 900px)
    padding-left 0
  @media screen and (min-width: 900px)
    padding-left 40%

a
  text-decoration none
  outline 0
  color rgb(60,60,60)

.icon-logo
  @media screen and (max-width: 900px)
    font-size 130px
  @media screen and (min-width: 900px)
    font-size 90px
  
.left
  fixed top 50% left 150px
  transform translateY(-50%)
  @media screen and (max-width: 900px)
    display none
  @media screen and (min-width: 900px)
    display block

.top
  text-align center
  padding 200px 0 200px
  @media screen and (max-width: 900px)
    display block
  @media screen and (min-width: 900px)
    display none
    

.navi
  font-weight 300
  margin-top 40px
  font-size 12px
  letter-spacing 2px
  .item
    -webkit-filter grayscale(100%)
  .item:hover
    font-weight 400
    -webkit-filter grayscale(0%)
  .item-bold
    font-weight 400
    -webkit-filter grayscale(0%)
  #art
    margin-bottom 5px
  .icon-square,.icon-square-f
    font-size 10px
    padding-left 1px
    padding-right 8px
    color rgb(117,174,214)
  .icon-square-f
    display none
  .icon-triangle,.icon-triangle-f
    font-size 12px
    padding-right 7px
    color rgb(130,228,185)
  .icon-triangle-f
    display none

.contact
  font-size 12px
  padding-top 40px
  letter-spacing 1px
  ul
    list-style-type none
    padding-left 0
  li
    display inline
    margin-right 15px
  a
    color rgb(60,60,60)
  
  .icon
    transition all 0.3s ease
    
  .icon-linkedin:hover
    color #0077B5
  .icon-facebook:hover
    color #3B5998
  .icon-instagram:hover
    color #3F729B
  .icon-github:hover
    color #4183C4
  .icon-email:hover
    color #FF6586
 
  .icon-heart
    display none
    &:hover
      color #FF6586

#arts
  clearfix()
  .art
    .image
      position relative
      float left
      width 50%
      background-color #f0f0f0
      background-size cover
      background-position center
      @media screen and (max-width: 900px)
        -webkit-filter grayscale(0%)
      @media screen and (min-width: 900px)
        -webkit-filter grayscale(100%)
      transition all 0.5s ease
      &:hover
        -webkit-filter grayscale(0%)
        cursor zoom-in
    .image-fullscreen
      display none
      background rgba(#fff, .9)
      fixed top left
      size 100%
      cursor zoom-out
      img
        width 600px
        @media screen and (max-width: 900px)
          width 100%
        absolute top 50% left 50%
        transform translate(-50%, -50%)
  .fashion
    font-family Roboto Condensed, sans-serif
    float left
    width 100%
    height 400px
    background-image url('/assets/arts/f.jpg')
    background-size cover
    background-position center
    padding-left 40px
    @media screen and (max-width: 900px)
      -webkit-filter grayscale(0%)
      -webkit-box-pack center
    @media screen and (min-width: 900px)
      -webkit-filter grayscale(100%)
    -webkit-filter grayscale(100%)
    display -webkit-box
    -webkit-box-align center
    transition all 0.5s ease
    &:hover
      -webkit-filter grayscale(0%)
      h1
        text-shadow 4px 0px #323232
        transition all 0.3s ease
    h1
      @media screen and (max-width: 900px)
        text-shadow 4px 0px #323232
      color #FF65AF
      font-size 80px
      margin 0
      letter-spacing 1.5px
      
#techs
  clearfix()
  .image
    font-family Roboto Condensed, sans-serif
    font-weight 300
    overflow hidden
    float left
    width 100%
    height 450px
    background-color #f0f0f0
    background-size cover
    display -webkit-box
    -webkit-box-align center
    padding-left 40px
    @media screen and (max-width: 900px)
      -webkit-filter grayscale(0%)
      -webkit-box-pack center
    @media screen and (min-width: 900px)
      -webkit-filter grayscale(100%)
    transition all 0.3s ease
    &:hover
      -webkit-filter grayscale(0%)
      cursor zoom-in
      h1
        text-shadow 4px 0px #323232
        transition all 0.3s ease
    h1
      @media screen and (max-width: 900px)
        text-shadow 4px 0px #323232
      font-size 80px
      margin 0
      color #fff
      letter-spacing 5px
  .small
    -webkit-filter grayscale(0%)
    &:hover
      h1
        text-shadow 0 0
    height 80px
    @media screen and (min-width: 900px)
      background-size 120%
      background-position center right
      background-repeat no-repeat
    h1
      @media screen and (max-width: 900px)
        display none
      font-size 20px
      letter-spacing 2px
  .desc-card
    text-align justify
    padding 0 40px 0 40px
    font-weight 300
    letter-spacing 0.8px
    color #fff
    overflow hidden
    float left
    width 100%
    height 0
    cursor zoom-out
    @media screen and (max-width: 900px)
      font-size 35px
    img
      display block
      padding-top 30px
      size 100%
    p
      margin-top 20px
      margin-bottom 40px
    a
      font-style italic
      color #fff

#about
  padding-top 80px
  @media screen and (min-width: 900px)
    background-image url("/assets/about_pic.svg")
  background-position bottom left
  background-repeat repeat-x
  .avatar
    @media screen and (max-width: 900px)
      display none
    width 180px
    height 180px
    background-image url("/assets/avatar.jpg")
    background-size cover
    //border-radius 90px
    margin-right 40px
    float left
  .right    
    @media screen and (min-width: 900px)
      float left
    @media screen and (max-width: 900px)
      text-align center
      letter-spacing 2px
    .title
      @media screen and (max-width: 900px)
        font-size 80px
      font-size 32px
    .btn
      display block
      width 150px
      border-style solid
      border-width 2px
      border-color rgb(60,60,60)
      text-align center
      padding 6px 8px 6px 8px
      margin-top 20px
      letter-spacing 4px
      font-size 15px
      transition all 0.3s ease
      @media screen and (max-width: 900px)
        width 80%
        height 160px
        border-width 4px
        font-size 60px
        padding-top 40px
        margin auto
      &:hover
        background-color rgb(60,60,60)
        color #fff
  .desc
    @media screen and (max-width: 900px)
      margin-top 40px
      font-size 42px
      padding-left 90px
      padding-right 90px
    text-align justify
    margin-top 220px
    padding-bottom 80px
    padding-right 20px
    font-size 18px
  ul
    margin-left 0
    padding-left 20px
    margin-bottom 50px
    @media screen and (max-width: 900px)
      margin-bottom 150px
  li
    padding-left 6px
    margin-top 10px
  .triangle
    list-style-image url('/assets/triangle.svg') 
  .square
    list-style-image url('/assets/square.svg') 
      
