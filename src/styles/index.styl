@import 'nib'
@import './iconfont.css'

*
  box-sizing border-box

body
  font-size 16px
  font-family Lato, sans-serif
  padding-left 40%
  min-width 1000px
  color rgb(60,60,60)

.icon-logo
  font-size 90px
  
.left
  fixed top 50% left 150px
  transform translateY(-50%)

.navi
  font-weight 300
  margin-top 40px
  font-size 12px
  letter-spacing 2px
  a
    text-decoration none
    outline 0
    color rgb(60,60,60)
  .item:hover
    font-weight 400
  .item-bold
    font-weight 400
  #art
    margin-bottom 5px
  .icon-square,.icon-square-f
    font-size 10px
    padding-left 1px
    padding-right 8px
    color rgb(117,174,214)
  .icon-square-f
    display none
  .icon-triangle,.icon-triangle-f
    font-size 12px
    padding-right 7px
    color rgb(130,228,185)
  .icon-triangle-f
    display none

.contact
  font-size 12px
  padding-top 40px
  letter-spacing 1px
  ul
    list-style-type none
    padding-left 0
  li
    display inline
    margin-right 15px
  a
    text-decoration none
    outline 0
    color rgb(60,60,60)
  
  .icon
    transition all 0.3s ease
    
  .icon-linkedin:hover
    color #0077B5
  .icon-facebook:hover
    color #3B5998
  .icon-instagram:hover
    color #3F729B
  .icon-github:hover
    color #4183C4

#arts
  clearfix()
  .art
    .image
      position relative
      float left
      width 50%
      background-color #f0f0f0
      background-size cover
      background-position center
      -webkit-filter grayscale(100%)
      transition all 0.5s ease
      &:hover
        -webkit-filter grayscale(0%)
        cursor zoom-in
    .image-fullscreen
      display none
      background rgba(#fff, .9)
      fixed top left
      size 100%
      cursor zoom-out
      img
        width 600px
        absolute top 50% left 50%
        transform translate(-50%, -50%)
  .fashion
    font-family Roboto Condensed, sans-serif
    float left
    width 100%
    height 400px
    background-image url('/assets/arts/f.jpg')
    background-size cover
    background-position center
    padding-left 40px
    -webkit-filter grayscale(100%)
    display -webkit-box
    -webkit-box-align center
    transition all 0.5s ease
    &:hover
      -webkit-filter grayscale(0%)
      h1
        text-shadow 4px 0px #323232
        transition all 0.3s ease
    h1
      color #FF65AF
      font-size 80px
      margin 0
      letter-spacing 1.5px
      
#techs
  clearfix()
  .image
    font-family Roboto Condensed, sans-serif
    font-weight 300
    overflow hidden
    float left
    width 100%
    height 450px
    background-color #f0f0f0
    background-size cover
    display -webkit-box
    //-webkit-box-pack center
    -webkit-box-align center
    padding-left 40px
    -webkit-filter grayscale(100%)
    transition all 0.3s ease
    &:hover
      -webkit-filter grayscale(0%)
      cursor zoom-in
      h1
        text-shadow 4px 0px #323232
        transition all 0.3s ease
    h1
      font-size 80px
      margin 0
      color #fff
      letter-spacing 5px
  .small
    h1
      font-size 20px
      letter-spacing 2px
    &:hover
      h1
        text-shadow 0 0
    height 80px
    -webkit-filter grayscale(0%)
    background-size 120%
    background-position center right
    background-repeat no-repeat
  .desc-card
    text-align justify
    padding 0 40px 0 40px
    font-weight 300
    letter-spacing 0.8px
    color #fff
    overflow hidden
    float left
    width 100%
    height 0
    cursor zoom-out
    img
      display block
      margin-top 10px
      margin-bottom 10px
      size 100%
    p
      margin-top 20px
      margin-bottom 40px
    a
      font-style italic
      text-decoration none
      outline 0
      color #fff

#about
  margin-top 50px
  h1
    font-size 30px
