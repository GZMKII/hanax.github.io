html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')

    title Hannah Xue

    meta(name='description' content='A stating point for building a static website in Jade, Stylus and ES6.')

    link(rel='stylesheet' href='//brick.a.ssl.fastly.net/Lato:300,300i,400,400i,700')

    script(src='/main.js')

  body
    .left
      .icon-logo
      p.navi
